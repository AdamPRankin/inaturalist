%tr.nested-fields.trip-taxa-fields
  %td
    = f.check_box :observed, :label => false
    = f.hidden_field :taxon_id
  %td.name
    .taxonwrapper
      - if f.object.taxon
        = render "taxa/chooser", :taxon => f.object.taxon
      - else
        =t :unknown
  %td.actions
    = link_to_remove_association t(:remove), f, :class => "btn btn-mini"