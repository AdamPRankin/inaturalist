<div id="header" class="clear">
  <% if logged_in? -%>
    <%= link_to( t(:welcome_login, :login => "#{current_user.login}"), dashboard_path, :class => "right", :id => "usernav") %>
  <% else %>
    <%= link_to(t(:sign_in), new_user_session_path, :id => "usernav") %>
  <% end -%>
  <a href="/" title="<%= CONFIG.site_name %>" id="logonav" class="logolink">
    <%= image_tag CONFIG.logo, :alt => SITE_NAME, :width => 118 %>
  </a>
</div>
