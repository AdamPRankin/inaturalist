<% content_for(:title) do %>
<%= render :partial => "taxa/taxon.txt.erb", :locals => { :taxon => @taxon } %>
<% end -%>

<%- content_for(:extracss) do %>
<%= stylesheet_link_tag 'taxa/show', 'observations' %>
<style type="text/css" media="screen">
