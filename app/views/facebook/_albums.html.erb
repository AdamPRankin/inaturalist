<style type='text/css'>
  .photoSelectorAlbums img {
    width: 75px;
  }
  .photoSelectorAlbums td {
    color: #36C;
    vertical-align: middle;
    cursor: pointer;
    border: 1px solid #fff;
    padding: 3px;
  }
  .photoSelectorAlbums .album:hover td {
    border: 1px solid #ddd;
    color: #039;
  }
  .photoSelectorAlbums .album td:first-child {
    border-right: 0;
  }
  .photoSelectorAlbums .album td:last-child {
    border-left: 0;
  }
  .photoSelectorAlbums {
    height: 437px;
    overflow: auto;
  }
</style>
<div class='photoSelectorAlbums facebookAlbums'>
  <% if @albums.empty? %>
    <p>We can't find any photos from Facebook.</p>
  <% else %>
    <label>Select an album</label>
    <table>
    <% @albums.each do |album| %>
      <tr class='album' data-aid='<%= album['aid'] %>'>
        <td><%= image_tag(album['cover_photo_src']) %></td>
        <td><%= album['name'] %></td>
      </tr>
    <% end %>
    </table>
  <% end %>
</div>
