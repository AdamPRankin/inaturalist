<%= form_for([:oauth, application], :builder => DefaultFormBuilder) do |f| %>
  <div class="stacked">
    <%= f.text_field :name %>
    <%= errors_for application, :name %>

    <%= f.text_field :redirect_uri %>
    <%= errors_for application, :redirect_uri %>
    <% if Doorkeeper.configuration.test_redirect_uri %>
      <div class="meta">Use <strong><%= Doorkeeper.configuration.test_redirect_uri %></strong> for local tests</div>
    <% end %>
  </div>

  <div class="actions inline buttonrow">
    <%= f.submit :Submit, :class => "default button" %>
    <%= link_to "Cancel", oauth_applications_path, :class => "button" %>
  </div>
<% end %>

