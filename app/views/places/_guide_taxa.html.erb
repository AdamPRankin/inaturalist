<%-
  wrap_method = 'catch_and_release'
  wrap_args = []
  data_attrs = if @taxa
    {
      'data-page' => @taxa.current_page,
      'data-total-pages' =>  @taxa.total_pages,
      'data-total-entries' => @taxa.total_entries,
      'data-current-user-observed-count' => @current_user_observed_count,
      'data-listed-taxa-count' => @listed_taxa_count,
      'data-confirmed-listed-taxa-count' => @confirmed_listed_taxa_count
    }
  else
    {}
  end
  if @cache_this
    wrap_method = 'cache'
    wrap_args = [{:action_suffix => "first_page"}, {:expires_in => 1.hour}]
    data_attrs.delete_if{|k,v| k == 'data-current-user-observed-count'}
  end
-%>

<% send(wrap_method, *wrap_args) do %>
  <div class="guide_taxa" <%= data_attrs.map{|k,v| "#{k}=\"#{v}\""}.join(' ') %>>
    <% if @taxa.total_pages == 0 -%>
      <div class="noresults meta">
        <% if @filter_params.blank? -%>
          No species have been listed for this place yet!
        <% else %>
          No matching species.
        <% end -%>
      </div>
    <% else %>
      <% for taxon in @taxa %>
        <%= render :partial => "listed_taxa/guide_taxon", :locals => { :listed_taxon => @listed_taxa_by_taxon_id[taxon.id], :taxon => taxon } %>
      <% end %>
      <%= will_paginate @taxa %>
    <% end -%>
    <script type="text/javascript" charset="utf-8">
      var newTaxa = <%= @taxa_by_taxon_id.to_json(:methods => [:common_name]) %>
      if (taxa) {
        $.extend(taxa, newTaxa)
      } else {
        var taxa = newTaxa
      }
    </script>
  </div>
<% end %>
