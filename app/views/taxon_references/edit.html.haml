.container
  .row
    .col-xs-6.prepend-6
      %h2 Editing Taxon Reference
      = render 'form'
      - if @taxon_reference.relationship == "not local" || @taxon_reference.taxa.empty? || @taxon_reference.taxa.first.id.nil?
        = link_to t(:cancel), @taxon_reference, class: "btn btn-default"
      - else
        = link_to t(:cancel), taxonomy_details_for_taxon_path(@taxon_reference.taxa.first), class: "btn btn-default"
      = link_to t(:delete), @taxon_reference, :method => :delete, data: {:confirm => t(:are_you_sure?)}, class: "btn btn-danger"

