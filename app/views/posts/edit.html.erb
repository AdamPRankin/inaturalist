<% content_for(:title) do -%>
  <%= @parent_display_name %>'s Journal &middot; Editing "<%= @post.title %>"
<%- end -%>
<% content_for(:extracss) do -%>
  <%= stylesheet_link_tag "posts" %>
<% end -%>
<div id="pageheader" class="column span-24">
  <div class="breadcrumbs">
    <strong><%= link_to "&laquo Back to post".html_safe, @post, :class => 'crumb' %></strong>
  </div><!-- /#breadcrumbs -->
  <h2>Editing "<%= @post.title %>"</h2>
  <div class="meta">
    Post from
    <% if @post.parent.is_a?(Project) -%>
      <%= link_to @post.parent.title, @post.parent %>'s journal
    <% else %>
      <%= link_to "your journal", journal_by_login_path(current_user.login) %>
    <% end -%>
  </div>
</div>

<div class="column span-24">
  <% if @preview -%>
    <div id="preview" class="box">
      <h3>Preview</h3>
      <%= render :partial => "post", :locals => { :post => @post } %>
    </div>
  <% end -%>

  <%= render :partial => 'form' %>  
</div>

