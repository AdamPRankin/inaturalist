    margin-bottom: 0.5em;
  }
  
  #noobservations .button {
    width: auto;
    float: none;
    margin: 0 auto;
  }
  
  .edit_taxon_photos .taxon_photos {
    margin-bottom: 1em;
  }
  
  #photos .photos_wrapper a {
    display: block;
    float: left;
    margin: 0 10px 10px 0;
  }
  
  #photos .photos_wrapper a.last {
    margin-right: 0;
  }
  
  #extras {
    margin-top: 1em;
  }
  
  #add_to_list {
    list-style: none;
    margin: 0;
  }
  
  #add_to_list.lots {
    max-height: 175px;
    overflow: auto;
  }
  
  #add_to_list li {
    border-bottom: 1px solid #ccc;
    margin-bottom: 5px;
    padding-bottom: 5px;
  }
  
  #add_to_list li.last {
    padding: 0;
    border: 0 none;
  }
  
  #add_to_list .controls {
    float: right;
  }
  
  #add_to_list .action {
    font-weight: bold;
  }
  
  #add_to_list .added a,
  #add_to_list li.description a {
    color: #888;
  }
  
