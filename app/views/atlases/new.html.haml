%h2
  = "new atlas"
  - if @atlas.taxon
    = t :for
    = link_to @atlas.taxon.name, @atlas.taxon
= form_for(@atlas, :builder => DefaultFormBuilder, :html => {:multipart => true}) do |f|
  = f.error_messages
  = render :partial => 'form_fields', :locals => {:f => f}
  = f.submit t(:create), :class => "default button"
= link_to t(:back), @atlas.taxon || taxa_path, :class => "button"
