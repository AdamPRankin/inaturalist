  %a{:class => "sciname {{ commonName() ? '' : 'display-name' }}", href: "{{ url }}", "ng-show": "scientificName()"}><
    %span.rank{"ng-show" => "commonName() && taxon.rank_level > 10"}><
      {{ taxon.rank | capitalize }}
    {{ scientificName() }}
