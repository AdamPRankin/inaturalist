#observers-table.container{ "infinite-scroll": "showMoreObservers( )", "infinite-scroll-disabled": "!viewing('observers')" }
  %table.table.table-striped.plain-table
    %thead
      %tr
        %th.rank
          {{ shared.t( 'rank' )}}
        %th.user
          {{ shared.t( 'user' )}}
        %th{ "ng-click": "observersSort = 'observationCount';" }
          %i.fa.fa-binoculars
          {{ shared.t( 'observations' )}}
        %th{ "ng-click": "observersSort = 'speciesCount';" }
          {{ shared.t( 'species' )}}
    %tbody
      %tr{ "ng-repeat": "u in observers | orderBy:observersSort:true | limitTo: numberObserversShown" }
        %td.rank
          {{ $index + 1 }}
        %td
          %a.user.userimage{ href: "/people/{{ u.login }}", "ng-style": "{{!!u.icon_url}} && { 'background-image': \"url('{{ u.icon_url }}')\" }", title: "{{ u.login }}" }
            %i.icon-person{"ng-hide" => "u.icon_url"}
          %a{ href: "/people/{{ u.login }}", title: "{{ u.login }}" }
            {{ u.login }}
        %td {{ u.observationCount }}
        %td {{ u.speciesCount }}
