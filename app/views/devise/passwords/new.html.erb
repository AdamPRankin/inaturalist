<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :builder => DefaultFormBuilder, 
    :html => { :method => :post, :class => "clear" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email, :class => "text" %>
  <%= f.submit "Send me reset password instructions", :class => "default button" %>
<% end %>

<p class="ui">
  <%= render "devise/shared/links" %>
</p>

