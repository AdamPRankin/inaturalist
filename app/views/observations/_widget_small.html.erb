<div class="inat-widget-small">
  <% for observation in @observations %>
    <% link_to observation_url(observation), :class => "inat-observation-image", :target => (target ? "_blank" : nil) do %>
      <% if obs_img_url = observation_image_url(observation) -%>
        <%= image_tag obs_img_url, :border => 0 %>
      <% else %>
        <%= iconic_taxon_image(observation.iconic_taxon, :border => 0) %>
      <% end -%>
    <% end %>
  <% end %>
</div>
