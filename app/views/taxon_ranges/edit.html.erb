<h2>
  Editing Taxon Range 
  <% if @taxon_range.taxon -%>
    for <%= link_to @taxon_range.taxon.name, @taxon_range.taxon %>
  <% end -%>
</h2>

<% form_for(@taxon_range, :builder => DefaultFormBuilder, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  
  <%= render :partial => 'form_fields', :locals => {:f => f} %>

  <%= f.submit 'Update', :class => "default button" %>
<% end %>

<%= link_to 'Back', @taxon_range.taxon || taxa_path, :class => "button" %>
<%= link_to 'Delete', @taxon_range, :method => :delete, :confirm => "Are you sure you want to delete this range?", :class => "minor delete button" %>