- content_for :title do
  =t :your_relationships
.container
  .row
    .col-xs-12
      %h2=t :your_relationships
  .row
    .col-xs-12
      #controls
        = form_tag url_for, method: :get, class: "form-inline" do
          = hidden_fields_for_params( without: [:q, :following, :trusted, :page, :order, :order_by] )
          .form-group
            .input-group
              %input.form-control{ type: "search", name: "q", value: @q, placeholder: t(:username) }
              .input-group-btn
                = submit_tag t(:search), class: "btn btn-default"
          %label.form-group
            %input{ type: "checkbox", name: "following", value: "yes", checked: params[:following].yesish?, data: { autosubmit: true } }
            =t :following
          %label.form-group
            %input{ type: "checkbox", name: "trusted", value: "yes", checked: params[:trusted].yesish?, data: { autosubmit: true } }
            =t :trusted
  .row
    .col-xs-12
      %table.table
        %thead
          %tr
            %th
              = link_to url_for_params( order_by: "user", order: @order == "desc" ? "asc" : "desc" ) do
                = t(:name)
                - if @order_by == "user"
                  - if @order == "desc"
                    &darr;
                  - else
                    &uarr;
            %th
              = link_to url_for_params( order_by: "date", order: @order == "desc" ? "asc" : "desc" ) do
                = t(:date_added)
                - if @order_by == "date"
                  - if @order == "desc"
                    &darr;
                  - else
                    &uarr;
            %th=t :settings
            %th=t :actions
        %tbody
          - for friendship in @friendships
            %tr
              %td
                = link_to( image_tag( friendship.friend.icon.url(:thumb), class: "usericon" ), person_path( friendship.friend ) )
                = link_to_user friendship.friend
                .meta= friendship.friend.name
              %td=l friendship.created_at
              %td
                = form_for friendship, url: relationship_path( friendship, format: :json ), remote: true do |f|
                  .form-group
                    %label
                      = f.check_box :following, data: { autosubmit: true }
                      =t :follow_receive_updates_about_new_observations
                  .form-group
                    %label
                      = f.check_box :trust, data: { autosubmit: true }
                      =t :trust_with_private_coordinates
              %td
                = button_to t(:remove_relationship), relationship_path( friendship ), method: :delete, data: { confirm: t(:are_you_sure_remove_relationship) }, class: "btn btn-default"
      = will_paginate @friendships
