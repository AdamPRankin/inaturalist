.nested-fields.row-fluid.lined.clearfix{:id => dom_id(f.object, "nested_field")}
  = f.text_field :position, :class => "sortable-position pull-left"
  = image_tag f.object.photo.try(:square_url), :class => "img-rounded pull-left"
  = f.hidden_field :photo_id
  = f.hidden_field :guide_taxon_id
  = f.text_area :description, :placeholder => "Brief caption", :class => "pull-left"
  .actions.pull-right
    = link_to_remove_association "remove photo", f, :class => "btn btn-mini"
