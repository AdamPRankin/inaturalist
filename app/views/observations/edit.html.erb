<% content_for(:title) do %>Editing Observation <%= @observation.id %><% end -%>
<% content_for(:extracss) do -%>
  <%= stylesheet_link_tag 'observations', 'jquery-datepicker', 'taxa', 
    'taxon_browser', "observations/edit" %>
  <style type="text/css" media="screen">
    #batchlink {
      text-align: right;
    }
    
    textarea {
      width: 239px;
      margin: 0;
    }
    
    .field label {
      display: block;
      margin-bottom: 0.2em;
    }
    
    input.place_guess {
      width: 336px;
    }
    
    #mapcontainer {
      height: 433px;
      border: 1px solid #ccc;
    }
    
    .latlonfields {
      position: relative;
    }
    
    .observationform .latlonfields.status input {
      width: 134px;
    }
    
    .latlonfields .button {
      position: absolute;
      top: 0.2em;
      right: 0;
    }
    
    .photoSelectorControls input.text {
      width: 189px;
    }
    .photoSelectorControls .prevlink {
      float: left;
      clear: left;
    }
    .photoSelectorControls .nextlink {
      float: right;
    }
    
    .photoSelectorPhotos {
      height: 412px;
      margin: 0 auto;
      overflow: auto;
    }
    
    .photo {
      margin: 0;
    }
  </style>
<% end %>
<% content_for(:extrajs) do %>
  <%= gmap_include_tag %>
  <%= javascript_include_tag "jquery/jquery-ui-1.8.11.min",
                             "jquery/plugins/jquery.string.1.0.js",
                             'inaturalist/map2',
                             "jquery/plugins/inat/datepicker.js",
                             "jquery/plugins/inat/photo_selectors.js",
                             "jquery/plugins/jquery.latLonSelector.js",
                             "jquery/plugins/inat/taxon_selectors.js",
                             "jquery/plugins/jqModal",
                             "taxon_browser",
                             "observations/edit" %>
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
      $('.observation_photos').each(function() {
        // The photo_fields endpoint needs to know the auth token and the index
        // for the field
        var index_str = $(this).parents('.observation:first').find('input:visible:first').attr('name');
        var index = $.string(index_str).gsub(/[^\d]*/, '').str;
        var authenticity_token = $(this).parents('form').find('input[name=authenticity_token]').val();
        $(this).photoSelector({
          <%- if @default_photo_identity && @default_photo_identity.is_a?(FlickrIdentity) -%>
            baseURL: '/flickr/photo_fields?context=user',
          <%- elsif @default_photo_identity && @default_photo_identity.is_a?(PicasaIdentity) -%>
            baseURL: '/picasa/photo_fields?context=user',
          <% else %>
            baseURL: '/photos/local_photo_fields?context=user',
            queryOnLoad: false,
          <%- end -%>
          <%- unless @photo_identities.blank? %>
            <%- 
              urls = @photo_identities.map do |identity|
                service = identity.class.to_s.underscore.split('_').first.capitalize
                "{title: '#{service}', url: '/#{service.downcase}/photo_fields?context=user'}"
              end
            -%>
            urls: [<%= urls.join(', ') %>],
          <% end -%>
          urlParams: {
            authenticity_token: authenticity_token,
            index: index,
            limit: 12,
            synclink_base: "/observations/"+index+"/edit"
          }
        });
      });
    });
  </script>
<% end %>
<div id="pageheader" class="column span-24">
  <div class="breadcrumbs">
    <%= link_to "Back to observation", @observation, :class => 'back crumb' %>
  </div>
  <h2>Editing Observation <%= @observation.id %></h2>
</div>

<div class="column span-24">
  <% form_for(@observation, :html => {:class => 'observationform', :multipart => true}) do %>
    <%= render(:partial => 'form_fields', :locals => {
      :observation => @observation,
      :i => @observation.id
    }) %>
    <% if current_user != @observation.user %>
      <%= hidden_field_tag "admin_action", "true" %>
    <% end %>
    <%= submit_tag("Save observation", :class => 'default button', "data-loading-click" => true) %>
    <%= link_to("Cancel", session[:return_to], :class => 'button') %>
    <%= link_to "Delete", @observation, 
                :confirm => "Are you sure you want to delete this observation?", 
                :method => :delete, 
                :id => "delete_observation_button", 
                :class => "minor delete button" %>
  <% end %>
</div>
