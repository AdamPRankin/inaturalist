#result-grid.container.container-fixed{ "infinite-scroll": "nextPage( )", "infinite-scroll-disabled": "!viewing('observations', 'grid') || busy" }
  .row
    .col-xs-3{ "ng-repeat": "o in observations" }
      .thumbnail.borderless
        %a.photo{ href: "/observations/{{ o.id }}", style: "background-image: url({{ o.photo( ) }})" }
        .caption
          %a.user{ href: "/observations/{{ o.id }}", style: "background-image: url('{{ o.user.icon_url }}')", title: "{{ o.user.login }}" }
            %i.fa.fa-user{"ng-hide" => "o.user.icon_url"}
          %inat-taxon.title{taxon: "o.taxon", url: "/observations/{{ o.id }}"}
          .meta
            %span.identifications{"ng-show" => "o.identifications_count > 0"}
              %i.fa.fa-tag
              {{ o.identifications_count }}
            %span.comments{"ng-show" => "o.comments_count > 0"}
              %i.fa.fa-comment
              {{ o.comments_count }}
            %span.favorites{"ng-show" => "o.faves_count > 0"}
              %i.fa.fa-star
              {{ o.faves_count }}
            %span.pull-right{"am-time-ago" => "o.observed_on", title: "{{ o.observed_on }}"}
