#observers-table.container{ "infinite-scroll": "showMoreObservers( )", "infinite-scroll-disabled": "!viewing('observers')" }
  %table.table.table-striped.plain-table
    %thead
      %tr
        %th.rank
          {{ shared.t( 'rank' )}}
        %th.user
          {{ shared.t( 'user' )}}
        %th
          %i.fa.fa-binoculars
          {{ shared.t( 'observations' )}}
    %tbody
      %tr{ "ng-repeat": "u in observers | limitTo: numberObserversShown" }
        %td.rank
          {{ $index + 1 }}
        %td
          %a.user.userimage{ href: "/people/{{ u.login }}", style: "background-image: url('{{ u.icon_url }}')", title: "{{ u.login }}" }
            %i.fa.fa-user{"ng-hide" => "u.icon_url"}
          %a{ href: "/people/{{ u.login }}", title: "{{ u.login }}" }
            {{ u.login }}
        %td {{ u.resultCount }}
