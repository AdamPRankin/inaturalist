= form_for @term || ControlledTerm.new do |f|
  %ul
    %li
      = f.label :ontology_uri
      = f.text_field :ontology_uri
    %li
      = f.label :uri
      = f.text_field :uri
    %li
      = f.label :label
      = f.text_field :label
    %li
      = f.label :is_value
      = f.check_box :is_value
    %li
      = f.label :active
      = f.check_box :active
    %li
      = f.label :valid_within_clade
      = f.text_field :valid_within_clade
    %li
      = f.label :icon
      = f.file_field :icon, accept: "image/jpg,image/jpeg,image/png,image/gif"
    - if @term && @term.icon.exists?
      %li
        = image_tag @term.icon.url, style: "max-width: 250px; max-height: 250px;"
    %li
      = f.label :definition
      = f.text_area :definition, rows: 3, cols: 50
  = f.submit


