if( typeof RECENT_PROJECTS === "undefined" ) {
  var RECENT_PROJECTS = [ ];
}
var anyRecentProjects = RECENT_PROJECTS.length > 0;

$.fn.projectAutocomplete = function( options ) {
  options = options || { };
  if( !options.idEl ) { return; }
  var field = this;

  field.genericAutocomplete( _.extend( options, {
    minLength: anyRecentProjects ? 0 : undefined,
    allowPlaceholders: true,
    source: function( request, response ) {
      if( !request.term ) {
        if( anyRecentProjects ) {
          response( RECENT_PROJECTS );
        } else {
          response( [] );
        }
      } else {
        $.ajax({
        url: "//<%= CONFIG.node_api_host %>/projects/autocomplete",
          dataType: "jsonp",
          cache: true,
          jsonpCallback: "projectAutocompleteCallback",
          data: {
            q: request.term,
            per_page: 10
          },
          success: function( data ) {
            response( data.results );
          }
        });
      }
    }
  }));
};
