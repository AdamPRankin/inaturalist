<% url = url_for project_assessment_path(@assessment.project, @assessment) + '?iframe=true' %>
<% url = "#{request.protocol}#{request.host_with_port}#{url}" %>
<% embed_code = "<iframe src=\"#{url}\" style=\"overflow-x: hidden; overflow-y: scroll; width: 350px; width: 600px;\" ></iframe>" %>
<div class="assessment-iframe-embed-code">
<h2>Embed This Assessment</h2>
Copy and paste the following code embed this assessment into another web page. <br/>
<textarea><%= embed_code %></textarea>
<br/>
Note: You can modify the 'height' attribute to fit the available space on your web page. <br/>
</div>