  %a{:class => "icon icon-iconic-{{ iconicTaxonNameForID(taxon.iconic_taxon_id) | lowercase }}", href: "{{ url || '/taxa/'+taxon.id }}"}
  %a{:class => "noname {{ taxon ? '' : 'display-name' }}", href: "{{ url }}", "ng-show": "!taxon"}
    {{ shared.t('unknown') }}
  %a{:class => "comname {{ commonName() ? 'display-name' : ''}}", href: "{{ url }}", "ng-show": "commonName()"}
